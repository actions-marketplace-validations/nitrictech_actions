{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "isolatedModules": true,
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": [
    "./dist",
    "./node_modules",
    "./__tests__",
    "./coverage",
    "vite.config.ts"
  ]
}
